@model IEnumerable<Proyecto_VentadeVehiculos.Models.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Vehiculo</h1>

<p>
    <a asp-action="Create">Crear</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kilometraje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCombustible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kilometraje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCombustible)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVehiculo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdVehiculo">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVehiculo">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

    ViewData["Title"] = "Delete";
}

<h1>Borrar</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vehiculo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Año)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Año)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.kilometraje)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kilometraje)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCombustible)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCombustible)
        </dd>
        <dt class="col-sm-2">

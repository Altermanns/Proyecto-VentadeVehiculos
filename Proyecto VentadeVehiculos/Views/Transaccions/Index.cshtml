@model IEnumerable<Proyecto_VentadeVehiculos.Models.Transaccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Transacciones</h1>

<p>
    <a asp-action="Create">Realizar transaccion</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comprador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaTransaccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioFinal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comprador.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehiculo.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTransaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioFinal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTransaccion">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransaccion">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransaccion">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
